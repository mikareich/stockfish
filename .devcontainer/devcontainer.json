{
  "name": "Stockfish Server Dev Container",
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile"
  },
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "formulahendry.auto-rename-tag",
        "dbaeumer.vscode-eslint",
        "GitHub.copilot-chat",
        "GitHub.copilot-nightly",
        "esbenp.prettier-vscode",
        "apollographql.vscode-apollo"
      ]
    }
  }
}
